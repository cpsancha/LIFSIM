# Read the definitions from article.layout
Input book.layout


Style Bibliography
	TopSep                	4
	LatexName		References
	LabelString           	"References"
	LabelFont
	  Series	        Bold
	  Size          	Huge
	EndFont
End

Style acknowledgements
	Margin			Static
	LatexType		Environment
	LatexName		acknowledgements
	Category		FrontMatter
	NextNoIndent		1
	LeftMargin		MMM
	RightMargin		MMM
	ParIndent		MM
	ItemSep			0
	TopSep			0.7
	BottomSep		0.7
	ParSep			0
	Align			Block
	LabelType		Centered_Top_Environment
	LabelString           	"Acknowledgements"
	LabelBottomSep        	0.5
	Font
	  Size                	Small
	EndFont
	LabelFont
	  Series              	Bold
	  Size                	Large
	EndFont
End

